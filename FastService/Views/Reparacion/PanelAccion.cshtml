<script>

    function ImprimirRecibo(){
          window.open('@Url.Action("ImprimirRecibo")', '_blank');
    }

    $("#nuevaOrden").click(function () {
        ajaxGetNoCustomError(
            "@Url.Action("Create","Reparacion")",
            function (data) {
                $("#OrdenResumen").html(data);
            }
        );
    })

    $(".reparacionActionButton").click(function () {
        ajaxGetNoCustomError(
            "@Url.Action("Novedad","Reparacion")/?tipo=" + $(this).data("tipo"),
            function (data) {
                $("#modalNuevaNovedad").html(data);
                $("#modalNuevaNovedad").modal();
            }
        );
    })

    $("#imprimirBtn").click(function () {
        ImprimirRecibo();
    })

    $("#guardarBtn").click(function () {
        $("#btnGuardarOrden").trigger("click");
    })

</script>