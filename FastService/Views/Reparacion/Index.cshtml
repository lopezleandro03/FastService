@model FastService.Models.Orden.IIndexModel
<div class="row">
    <div class="col-lg-12">

        <div id="modalNuevaNovedad" class="modal" aria-hidden="true" style="display: none;">

        </div>
    </div>
</div>

<div class="row">

    <div id="listaOrdenes" class="col-md-2">
        @if (Model.IsMyVIew)
        {
            @RenderPage("MiListaOrdenes.cshtml", Model)
        }
        else
        {
            @RenderPage("ListaOrdenes.cshtml", Model)
        }
    </div>

    <div id="OrdenResumen" class="col-md-8">
        @RenderPage("OrdenResumen.cshtml", Model)
    </div>

    <div id="PanelAccion" class="col-md-2">
        @RenderPage("PanelAccion.cshtml", Model)
    </div>
</div>

<style>
    hr {
        margin-top: 3px !important;
        margin-bottom: 3px !important;
    }
</style>

<script>
    function OnErrorNovedad() {
        $(".simplemodal-close").trigger("click");
        OnError();
    }

    function OnSuccessNovedad() {
        $(".simplemodal-close").trigger("click");
        Done();
    }
</script>

