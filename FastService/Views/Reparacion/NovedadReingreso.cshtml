@model FastService.Models.NovedadModel

<div class="modal-content">
    <div class="modal-header">
        <button class="close" aria-hidden="true" type="button" data-dismiss="modal"></button>
        <h4 id="modalNuevaNovedadHeader" class="modal-title">Nueva Novedad</h4>
    </div>

    @using (Ajax.BeginForm("Novedad", "Reparacion", new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnSuccess(data)", OnFailure = "OnError", LoadingElementId = "spinner" }))
    {
        <div width="100%" id="modalNuevaNovedadBody" class="modal-body">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="row-fluid">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Observacion)
                    @Html.TextAreaFor(model => model.Observacion, new { @class = "form-control" })
                </div>
            </div>

            <div class="row-fluid">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.TecnicoNombre)
                    @Html.TextBoxFor(model => model.TecnicoNombre, new { @class = "form-control" })
                </div>
            </div>

            <div class="row-fluid">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.ResponsableNombre)
                    @Html.TextBoxFor(model => model.ResponsableNombre, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="row-fluid">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Monto)
                    @Html.TextBoxFor(model => model.Monto, new { @class = "form-control" })
                </div>
            </div>

            <div class="row-fluid">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Material)
                    @Html.TextBoxFor(model => model.Material, new { @class = "form-control" })
                </div>
            </div>

            @Html.HiddenFor(model => model.TipoNovedadId)
        </div>

        <div class="modal-footer">
            <button class="btn dark btn-outline simplemodal-close" type="button" data-dismiss="modal">Close</button>
            <button id="btnSubmitNovedad" class="btn green" type="submit">Aceptar</button>
        </div>
    }

</div>

<script>
    function OnSuccess(data) {
        $(".simplemodal-close").trigger("click");
        $(".page-content").html(data);
    }
</script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
