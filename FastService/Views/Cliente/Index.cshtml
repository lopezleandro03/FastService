        </div>
    </div>
</div>

<style>
    .title-historia {
        padding-top: 1rem;
    }

    .divBuscar {
        padding-top: 2rem;
    }

    .divHistorial {
    }

    .newOrderButton {
        margin-right: 0rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
    }
</style>

<script>
    $(".newOrderButton").click(function () {
        ajaxGetNoCustomError(
            "@Url.Action("CreateForClient","Ticket")" + "?id=" + $(".Cliente_Id").val(),
            function (data) {
                $(".OrdenDetailBody").html(data);
                $("#ModalOrdenDetail").modal();
            }
        );
    });
</script>