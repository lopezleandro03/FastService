<div class="row">
    <div class="col-md-7 divBuscar">
        @RenderPage("Buscar.cshtml")
    </div>


    <div class="col-md-5">
        <div class="col-md-10">
            <h3 class="title-historia">Historial trabajos</h3>
        </div>
        <div class="col-md-2">
            <button disabled class="btn btn-lg btn-info btn-md center-block align newOrderButton" type="button" title="Crear nueva orden" ><i class="fa fa-plus"></i></button>
