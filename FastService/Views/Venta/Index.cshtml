</table>

<script>
    $("#btnNuevaVenta").click(function () {
        $.ajax({
            type: 'GET',
            url: "/Venta/Create",
            contentType: "html",
            dataType: "html",
            success: function (data) {
                $(".page-content").html(data);
            },
            error: function (data) {
                alert("Oops, este modulo no ha sido implementado aun...");
            }
        });
    });
</script>