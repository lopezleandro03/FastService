@model FastService.Models.MetodosDePago.PagoConChequeViewModel
<script src="~/Content/assets/pages/scripts/components-date-time-pickers.min.js"></script>
<script src="~/Content/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<link href="~/Content/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<hr>
@for (int i = 0; i < Model.Cheques.Count; i++)
{
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => Model.Cheques[i].NroCheque, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => Model.Cheques[i].NroCheque, new { @class = "form-control", @id = "NroCheque_" + i })
                    @Html.ValidationMessageFor(model => Model.Cheques[i].NroCheque)
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => Model.Cheques[i].Monto, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => Model.Cheques[i].Monto, new { @class = "form-control chequeMonto" ,@id = "Monto_" + i })
                    @Html.ValidationMessageFor(model => Model.Cheques[i].Monto)
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => Model.Cheques[i].FechaDebito, new { @class = "control-label col-md-3" })
                <div class="col-md-6">
                    <input class="form-control form-control-inline input-large date-picker" size="16" type="text" value="" placeholder="Seleccione fecha" id = "FechaDebito_@i">
                </div>
            </div>
        </div>
    </div>
}
